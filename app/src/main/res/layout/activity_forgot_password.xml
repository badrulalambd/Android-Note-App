<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/centerLine_id"
        android:layout_centerInParent="true"
        >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/centerTop_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_above="@+id/email_id"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot password"
            android:textSize="40sp"
            android:textColor="#FF5722"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't worry. We are her"
            android:textSize="22sp"
            android:textColor="#1477C5"
            android:textStyle="bold"
            />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/centerLine_id"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
        <EditText
            android:id="@+id/forgotPassword_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter registered email"
            android:inputType="textEmailAddress"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <RelativeLayout
        android:id="@+id/passwordRecoverButton_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_id"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_button_bg"
        android:padding="15dp"
        >
        <TextView
            android:id="@+id/goBackToLogin_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recover Password"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/goback_to_login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go back to login page"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="18sp"
        />



</RelativeLayout>